.apt-user-profile {
  height: 400rpx;
  position: relative;
}
.apt-user-profile .apt-user-bg {
  height: 400rpx;
  filter: blur(10rpx);
}
.apt-user-profile .apt-user-bg image {
  width: 100%;
  height: 100%;
}
.apt-user-profile .imageWrapper {
  height: 150rpx;
  width: 150rpx;
  position: absolute;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
}
.apt-user-profile .imageWrapper image {
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.apt-user-profile .nickName {
  position: absolute;
  top: 280rpx;
  color: black;
  left: 50%;
  transform: translateX(-50%);
}
.apt-user-profile button {
  position: absolute;
  top: 150rpx;
  left: 50%;
  transform: translateX(-50%);
  border: 1rpx solid red;
  color: var(--themeColor);
}
.listorder {
  height: 150px;
  display: flex;
  align-items: center;
}
.listorder .list {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.listorder .list .iconfont {
  margin-bottom: 20rpx;
  font-size: 45rpx;
}
.footer {
  padding: 20rpx;
}
.footer .footerlist {
  height: 100rpx;
  border-bottom: 1px solid black;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.footer .footerlist .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.footer .footerlist .left .iconfont {
  font-size: 40rpx;
  margin-right: 50rpx;
}
.footer .footerlist .right {
  color: #e0d4cd;
}
